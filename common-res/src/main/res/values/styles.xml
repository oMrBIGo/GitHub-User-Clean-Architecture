<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/default_noto_sans_thai</item>
        <item name="android:fontFamily">@font/default_noto_sans_thai</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
        <item name="android:textViewStyle">@style/defaultTextViewStyle</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="LauncherApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_layer</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="fontFamily">@font/default_noto_sans_thai</item>
        <item name="android:fontFamily">@font/default_noto_sans_thai</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:gravity">center</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/default_noto_sans_thai</item>
        <item name="android:fontFamily">@font/default_noto_sans_thai</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font12</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="defaultTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/default_noto_sans_thai</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="WhiteButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/button_home_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/default_noto_sans_thai</item>
        <item name="android:fontFamily">@font/default_noto_sans_thai</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font14</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="strokeColor">@color/button_home_color_stock</item>
        <item name="strokeWidth">@dimen/spacing05</item>
        <item name="rippleColor">@color/grey_light</item>
    </style>

    <style name="GreenButton" parent="AppTheme.Button">
        <item name="android:textSize">@dimen/font14</item>
        <item name="android:backgroundTint">@color/selector_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextActionBar">
        <item name="fontFamily">@font/default_noto_sans_thai</item>
        <item name="android:textSize">@dimen/font18</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">@dimen/font16</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint_input</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

</resources>